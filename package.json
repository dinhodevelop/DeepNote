{
  "name": "deepnote",
  "version": "1.0.0",
  "description": "Gerenciador local de notas com timer de produtividade",
  "main": "main.js",
  "author": "Bernardo",
  "homepage": "https://deepnote.local",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "start:clean": "ELECTRON_DISABLE_SECURITY_WARNINGS=true ELECTRON_ENABLE_LOGGING=false electron .",
    "dev:css": "tailwindcss -i ./src/style.css -o ./src/output.css --watch",
    "dev": "npm-run-all -p dev:css start:clean",
    "dev:verbose": "npm-run-all -p dev:css start",
    "dist": "electron-builder"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "electron-store": "^11.0.2",
    "lucide": "^0.553.0",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.deepnote.app",
    "productName": "DeepNote",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "icon": "build/icons/icon.png",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "bernardo"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    }
  }
}
